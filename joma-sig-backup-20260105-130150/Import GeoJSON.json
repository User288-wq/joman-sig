import React, { useState } from 'react';
import { Vector as VectorLayer } from 'ol/layer';
import { Vector as VectorSource } from 'ol/source';
import { GeoJSON } from 'ol/format';
import { Fill, Stroke, Circle, Style } from 'ol/style';

const GeoJSONImporter = ({ map, onImportComplete }) => {
  const [importedLayers, setImportedLayers] = useState([]);

  const handleFileUpload = (event) => {
    const file = event.target.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (e) => {
      try {
        const geoJSONData = JSON.parse(e.target.result);
        
        // Créer une source vectorielle à partir du GeoJSON
        const source = new VectorSource({
          features: new GeoJSON().readFeatures(geoJSONData, {
            featureProjection: 'EPSG:3857'
          })
        });

        // Créer un style OpenLayers correct
        const layerStyle = new Style({
          fill: new Fill({
            color: 'rgba(255, 0, 0, 0.2)'
          }),
          stroke: new Stroke({
            color: 'red',
            width: 2
          }),
          image: new Circle({
            radius: 5,
            fill: new Fill({
              color: 'red'
            }),
            stroke: new Stroke({
              color: 'white',
              width: 1
            })
          })
        });

        // Créer une couche vectorielle avec le style correct
        const vectorLayer = new VectorLayer({
          source: source,
          style: layerStyle
        });

        // Notifier le composant parent
        if (onImportComplete) {
          onImportComplete(vectorLayer);
        }

        // Ajouter à la liste locale
        setImportedLayers(prev => [...prev, vectorLayer]);

        console.log(`Import réussi : ${source.getFeatures().length} entités`);
      } catch (error) {
        console.error("Erreur lors de l'import GeoJSON :", error);
        alert("Erreur lors de l'import du fichier GeoJSON. Vérifiez le format.");
      }
    };
    
    reader.readAsText(file);
  };

  return (
    <div>
      <h4 style={{ marginBottom: "10px" }}>Import GeoJSON</h4>
      <input
        type="file"
        accept=".geojson,.json"
        onChange={handleFileUpload}
        style={{ marginBottom: "10px" }}
      />
      {importedLayers.length > 0 && (
        <div style={{ marginTop: "10px" }}>
          <p style={{ fontSize: "0.9em" }}>
            {importedLayers.length} couche(s) importée(s)
          </p>
          <button 
            onClick={() => {
              importedLayers.forEach(layer => {
                if (map) map.removeLayer(layer);
              });
              setImportedLayers([]);
            }}
            style={{
              padding: "5px 10px",
              fontSize: "0.8em",
              backgroundColor: "#f44336",
              color: "white",
              border: "none",
              borderRadius: "4px"
            }}
          >
            Supprimer toutes les couches
          </button>
        </div>
      )}
    </div>
  );
};

export default GeoJSONImporter;