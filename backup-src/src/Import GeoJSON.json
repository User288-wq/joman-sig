import React, { useState, useEffect } from "react";
import { Map, View } from "ol";
import TileLayer from "ol/layer/Tile";
import OSM from "ol/source/OSM";
import GeoJSONImporter from "./modules/import/GeoJSONImporter";

function MonComposantPrincipal() {
  const [map, setMap] = useState(null);

  useEffect(() => {
    const initialMap = new Map({
      target: "map",
      layers: [
        new TileLayer({
          source: new OSM(),
        }),
      ],
      view: new View({
        center: [0, 0],
        zoom: 2,
      }),
    });

    setMap(initialMap);
  }, []);

  const handleLayerImport = (importedLayer) => {
    console.log("Couche import√©e :", importedLayer);
  };

  return (
    <div>
      <div id="map" style={{ width: "100%", height: "500px" }}></div>
      {map && (
        <GeoJSONImporter map={map} onImportComplete={handleLayerImport} />
      )}
    </div>
  );
}

export default MonComposantPrincipal;
